# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Database Configuration
# Use a strong password and dedicated database user
POSTGRES_USER=ultralytics
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ultralytics

# Full database URL (used by the server)
DATABASE_URL=postgres://ultralytics:your-secure-password-here@postgres:5432/ultralytics

# Server Configuration
PORT=3000
NODE_ENV=production

# Rate Limiting
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention
# Days to keep event data (default: 365)
RETENTION_DAYS=365

# Logging
LOG_LEVEL=info
